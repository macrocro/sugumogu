<div class="row">
  <div class="col-md-4 left-container">
    <ul>
      <% @pref_shops.each do |shop| %>
      <li>
        <%= link_to shop.name, shop_data_path(shop[:pref],shop[:city],shop[:id]) %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-8 right-container">
    <h2><%= @shop[:name] %></h2>

    <div class="shop-info">

      <div>
        <%= @shop[:id] %>
      </div>

      <div>
        <%= @shop[:url] %>
      </div>

      <div>
        <%= @shop[:zip_code] %>
      </div>

      <div>
        <%= @shop[:address] %>
      </div>

      <div>
        <%= @shop[:pref] %>
      </div>

      <div>
        <%= @shop[:tel] %>
      </div>
    </div>
  </div>
</div>
